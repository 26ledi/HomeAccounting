@model List<HomeAccounting.BusinessLogic.Dtos.MemberDto>

<h1>Members List</h1>

<table>
    <thead>
       
        <tr>
            <th>Number </th>
            <th> Name</th>
            <th> Surname</th>
            <th> Birthday </th>
            <th> FamilyName</th>
            <th> Actions</th>
        </tr>
    </thead>
    <tbody>
        @for (var i = 0; i < Model.Count; i++)
        {
            <tr>
                <td>@(i + 1)
                <td>@Model[i].Name</td>
                <td>@Model[i].Surname</td>
                <td>@Model[i].Birthday.ToString("dd/MM/yyyy ")</td>
                <td>@Model[i].family.FamilyName</td>

                <td>
                    <a href="@Url.Action("Edit", "Member", new { id = Model[i].Id })">Edit</a> |
                    <a href="@Url.Action("Delete", "Member", new { id = Model[i].Id })">Delete</a>
                </td>
            </tr>
        }
    </tbody>
</table>
<a href="@Url.Action("Create", "Member")" class="btn btn-primary">Create</a>