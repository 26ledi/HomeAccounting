@model HomeAccounting.BusinessLogic.Dtos.MemberDto

<h1>Edit</h1>
<h4>Member</h4>

<form asp-action="Edit">
    <div class="form-group">
        <label asp-for="Id">Choose the Surname of the one you want to edit</label>
        <select asp-for="Id" class="form-control">
            <option value="@Model.Id">@Model.Surname</option>

            @foreach(var member in ViewBag.Members)
            {
                if(member.Id != Model.Id)
                {
                    <option value="@member.Id">@member.Surname</option>
                }
                
            }
        </select>
        <span asp-validation-for="Id" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="Name"></label>
        <input asp-for="Name" class="form-control" />
        <span asp-validation-for="Name" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="Surname"></label>
        <input asp-for="Surname" class="form-control" />
        <span asp-validation-for="Surname" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="Birthday"></label>
        <input asp-for="Birthday" class="form-control" />
        <span asp-validation-for="Birthday" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="FamilyId"></label>
        <select asp-for="FamilyId" class="form-control">
            @foreach (var family in ViewBag.Families)
            {
                <option value="@family.Id">@family.FamilyName</option>
            }
        </select>
        <span asp-validation-for="FamilyId" class="text-danger"></span>
    </div>



    <button type="submit" class="btn btn-primary">Edit</button>
</form>

