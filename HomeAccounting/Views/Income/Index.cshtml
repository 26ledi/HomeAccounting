@model List<HomeAccounting.BusinessLogic.Dtos.IncomeDto>

<h1>Income's List</h1>

<table>
    <thead>

        <tr>

            <th>Number</th>
            <th> Surname</th>
            <th> SourceName</th>
            <th> Amount</th>
            <th> Date</th>
            <th> Actions</th>
        </tr>
    </thead>
    <tbody>
        @for (var i = 0; i < Model.Count; i++)
        {
            <tr>
                <td>@(i + 1)
                <td>@Model[i].Member.Surname</td>
                <td>@Model[i].SourceIncome.Name</td>
                <td>@Model[i].Amount</td>
                <td>@Model[i].Date.ToString("dd/MM/yyyy")</td>

                <td>
                    <a href="@Url.Action("Edit", "Income", new { id = Model[i].Id })">Edit</a> |
                    <a href="@Url.Action("Delete", "Income", new { id = Model[i].Id })">Delete</a>
                </td>
            </tr>
        }
    </tbody>
</table>
<a href="@Url.Action("Create", "Income")" class="btn btn-primary">Create</a>