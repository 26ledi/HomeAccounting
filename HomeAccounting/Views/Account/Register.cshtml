@model HomeAccounting.Models.Register.RegisterUser;

@{
	ViewBag.Title = "title";
	Layout = "_Layout";
}


<form asp-action="Register" method="post">
	<div class="border p-3 mt-4">
		<div class="row pb-2">
			<h2 class="text-secondary text-center">Register To The HomeAccounting</h2>
			<hr class="bg-secondary" />
		</div>
		<div class="mb-3">
			<label asp-for="Email" class="form-label">Email :</label>
			<input asp-for="Email" class="form-control" placeholder="Enter your Email" />
			<span asp-validation-for="Email" class="text-danger"></span>
		</div>
		<div class="mb-3">
			<label asp-for="FirstName" class="form-label">FirstName :</label>
			<input asp-for="FirstName" class="form-control" placeholder="Enter your FirstName" />
			<span asp-validation-for="FirstName" class="text-danger"></span>
		</div>
		<div class="mb-3">
			<label asp-for="LastName" class="form-label">LastName :</label>
			<input asp-for="LastName" class="form-control" placeholder="Enter your LastName" />
			<span asp-validation-for="Email" class="text-danger"></span>
		</div>

		<div class="mb-3">
			<label asp-for="UserName" class="form-label">Username :</label>
			<input asp-for="UserName" class="form-control" placeholder="Enter your Username" />
			<span asp-validation-for="UserName" class="text-danger"></span>
		</div>
		<div class="mb-3">
			<label asp-for="Password" class="form-label">Password :</label>
			<input asp-for="Password" class="form-control" placeholder="Enter your password" />
			<span asp-validation-for="Password" class="text-danger"></span>
		</div>
		<div class="mb-3">
			<label asp-for="ConfirmPassword" class="form-label">Confirmed Password :</label>
			<input asp-for="ConfirmPassword" class="form-control" placeholder="Enter your password" />
			<span asp-validation-for="ConfirmPassword" class="text-danger"></span>
		</div>
		<button type="submit" class="btn btn-info" style="width:158px;">Submit</button>
		<a asp-controller="Home" asp-action="Index" class="btn btn-secondary" style="width:220px;">Continue without registring</a>
	</div>
</form>




@section Scripts{
	@{
		<partial name="_ValidationScriptsPartial" />
	}
}